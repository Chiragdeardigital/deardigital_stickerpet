<section class="products color-{{ section.settings.grp_card_background }}">
  <div class="container">
    <div class="flex card-items">
      {%- for block in section.blocks -%}
      {% case block.type %}
      {%- when 'cards' -%}
      <div class="card-item">
        
        {% if block.settings.card_image != blank %}
        <img srcset="{%- if block.settings.card_image.width >= 100 -%}{{ block.settings.card_image | img_url: '100x' }} 100w,{%- endif -%}
                     {% if  block.settings.card_image.width >= 288 %}{{  block.settings.card_image | img_url: '288x' }} 288w,{% endif %}"
             src="{{ block.settings.card_image | img_url: '100x' }}"
             width="auto"
           height="auto"
             alt="{{ block.settings.image.alt }}" 
             loading="lazy">
        {% else %}

        	{{ 'collection-2' | placeholder_svg_tag }}
        {% endif %}
        
        <div class="card-details">
          {{ block.settings.text }}
        </div>
      </div>
      {%- endcase -%}
      {%- endfor -%}

    </div>
  </div>
</section>

{% schema %}
{
    "name": "Featured cards",
    "settings": [
      {
        "type": "select",
        "id": "grp_card_background",
        "info" : "t:sections.featured-cards.settings.color_scheme.info",
          "options": [
             {
               "label": "t:sections.featured-cards.settings.color_scheme.options__1.label",
               "value": "accent-1"
             },
             {
               "label": "t:sections.featured-cards.settings.color_scheme.options__2.label",
               "value": "accent-2"
             },
             {
               "label": "t:sections.featured-cards.settings.color_scheme.options__3.label",
               "value": "background-1"
             },
             {
               "label": "t:sections.featured-cards.settings.color_scheme.options__4.label",
               "value": "background-2"
             },
             {
               "label": "t:sections.featured-cards.settings.color_scheme.options__5.label",
               "value": "background-3"
             },
             {
               "label": "t:sections.featured-cards.settings.color_scheme.options__6.label",
               "value": "background-4"
             },
             {
               "label": "t:sections.featured-cards.settings.color_scheme.options__7.label",
               "value": "background-5"
             },
             {
               "label": "t:sections.featured-cards.settings.color_scheme.options__8.label",
               "value": "inverse"
             }
          ],
          "label": "t:sections.featured-cards.settings.color_scheme.label",
        "default": "background-3"
    }
    ],
    "blocks": [
        {
            "type": "cards",
            "name": "t:sections.featured-cards.blocks.Cards.name",
            "limit": 3,
            "settings": [
                {
                    "id": "card_image",
                    "type": "image_picker",
                    "label": "t:sections.featured-cards.blocks.Cards.settings.image.label"
                },
                {
                    "id": "text",
                    "type": "text",
                    "label": "t:sections.featured-cards.blocks.Cards.settings.card_text.label"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "t:sections.featured-cards.presets.name",
            "category": "ADVANCED LAYOUT"
        }
    ]
}
{% endschema %}

