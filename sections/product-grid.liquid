{{ 'product-grid.css' | asset_url | stylesheet_tag }}

<div class="wrapper marg-bot-xl">
    <h2 class="h3 headings text-center no-mobile marg-bot" style="font-size: 35px !important;">{{section.settings.product_grid_heading}}<span class="grid_heading_subtext"> {{section.settings.product_grid_subtext}}</span></h2>
    <h2 class="h3 headings text-center no-desktop marg-bot marg-top-xxl" style="font-size: 30px !important;">{{section.settings.product_grid_heading}}<span style="font-size: 16px;"> {{section.settings.product_grid_subtext}}</span></h2>
    <div class="row">
      {% for product in collections[section.settings.collection_selected_grid].products %}
      {% if product.price > 0 %}
      <div class="col-md-4 flex-center">
        <div class="classic-products products">
          <div class="about-us middle-text image-section">
            {% if product.first_available_variant.featured_image != blank %}
            <a href="{{product.url}}"><img src="{{ product.first_available_variant.featured_image | img_url: 'master' }}" alt="Classic Product Image" loading = "lazy" /></a>
            {%- elsif product.first_available_variant.featured_image == blank and product.featured_image != blank -%}
            <a href="{{product.url}}"><img src="{{ product.featured_image | img_url: 'master' }}" alt="Classic Product Image" loading = "lazy" /></a>
            {%- else -%}
            {{ 'product-1' | placeholder_svg_tag }}
            {% endif %}
          </div>
          <div class="product-detail justify-text">
              
            <div class="row space-around">
              <p class="col-9 product-title">
                <a href="{{product.url}}"> 1x {{ product.title | escape  }}</a>
              </p>
              <p class="col-3 product-price">
                  {% render 'price', product: product , price_class: '' %}
              </p>
            </div>
  
            <div class="row">
              <p class="col-9 product-description">
                {{ product.description | escape  }}
                
              </p>
              <p class="col-3 product-size">
              </p>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>


  {% schema %}
{
    "name": "t:sections.product-grid.name",
    "settings": [
        {
            "type": "html",
            "id": "product_grid_heading",
            "default": "Product Grid Heading",
            "label": "t:sections.product-grid.settings.heading.label"
        },
        {
          "type": "html",
          "id": "product_grid_subtext",
          "default": "product grid subtext",
          "label": "t:sections.product-grid.settings.sub_text.label"
        },
        {
          "type": "collection",
          "id": "collection_selected_grid",
          "label": "t:sections.product-grid.settings.collection.label"
        }
    ],
    "blocks": [
      
    ],
    "presets": [
        {
            "name": "t:sections.product-grid.presets.name",
            "category": "ADVANCED LAYOUT"
        }
    ]
}
{% endschema %}

