             },
             {
               "label": "t:sections.customer-review.settings.color_scheme.options__2.label",
               "value": "accent-2"
             },
             {
               "label": "t:sections.customer-review.settings.color_scheme.options__3.label",
               "value": "background-1"
             },
             {
               "label": "t:sections.customer-review.settings.color_scheme.options__4.label",
               "value": "background-2"
             },
             {
               "label": "t:sections.customer-review.settings.color_scheme.options__5.label",
               "value": "background-3"
             },
             {
