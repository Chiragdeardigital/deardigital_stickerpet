<div class="mobile-container">
  <section class="reviews content-section color-{{ section.settings.customer_reviews_color_scheme }}">
    <div class="container">
      <div class="row">
        <div class="column-50 self-center">
          <h2 class="h3 headings">{{ 'sections.customer-review.review-heading' | t }}<br>
            <span style="display: none;"></span>


            <span id="review-typewriter" class="typewriter" data-period="6000"
                  data-type="[
                  {%- for block in section.blocks -%}{%- case block.type -%}{%- when "human_review" -%}
                  {%- assign textArray_human = block.settings.typed_text_human | split: "," -%}
                  '{{textArray_human}}'{%- unless forloop.last -%},{%- endunless -%}{%- when "pet_review" -%}{%- assign textArray_pet = block.settings.typed_text_pet | split: "," -%}
                  '{{textArray_pet}}' {%- unless forloop.last -%},{%- endunless -%}
                  {%- endcase -%}{%- endfor -%}
                  ]"
              >
              <span class="wrap">{{ 'sections.customer-review.initial_typewritter_text' | t }}</span></span>

              {{ 'sections.customer-review.review' | t }}
          </h2>
          <a href="#">
            <p class="para">
              <span class="stars">
                <span class="star">{% include "icon-star" %}</span>
                <span class="star">{% include "icon-star" %}</span>
                <span class="star">{% include "icon-star" %}</span>
                <span class="star">{% include "icon-star" %}</span>
                <span class="star">{% include "icon-star" %}</span>
              </span>
              4.9 score
            </p>
          </a>
        </div>
        <div class="column-50 faders">
          {%- for block in section.blocks -%}
        
          <div class="row v-center" {% if forloop.index > 1  %}style="display: none;"{% endif %}>
            <div class="column-30">
              <div class="v-center">
                {% if block.settings.review_image != blank %}
                <img srcset="{% if block.settings.review_image.width >= 170 %}{{ block.settings.review_image | img_url: '170x' }} 170w,{% endif %}"
                     class="full-image" 
                     data-src="" 
                     alt="{{ block.settings.review_image.alt }}" 
                     src="{{ block.settings.review_image | img_url: '800x' }}"
                     loading="lazy">
                {% else %}
                {{ 'collection-6' | placeholder_svg_tag }}
                {% endif %}
              </div>
            </div>
            <div class="column-60">
              <p class="para">{{ block.settings.review_text }}</p>
            </div>
          </div>
   
          {%- endfor -%}
        </div>
      </div>
    </div>
  </section>
</div>
