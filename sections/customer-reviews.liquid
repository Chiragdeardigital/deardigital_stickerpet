<div class="mobile-container">
  <section class="reviews content-section">
    <div class="container">
      <div class="row">
        <div class="column-50 self-center">
          <h2 class="h3 headings">Real,<br>
          {% assign textArray = section.settings.typed_text | split: "," %}
            <span id="review-typewriter" class="typewriter" data-period="6000"
                  data-type="[
                    {%- for text in textArray -%}
                      '{{ text }}'{%- unless forloop.last -%},{%- endunless -%}
                    {%- endfor -%}
                  ]">
              <span class="wrap">human</span></span>

            reviews.
          </h2>
          <a href="#">
            <p class="para">
              <span class="stars">
                <span class="star">{% include "icon-star" %}</span>
                <span class="star">{% include "icon-star" %}</span>
                <span class="star">{% include "icon-star" %}</span>
                <span class="star">{% include "icon-star" %}</span>
                <span class="star">{% include "icon-star" %}</span>
              </span>
              4.9 score
            </p>
          </a>
        </div>
        <div class="column-50 faders">
          {%- for block in section.blocks -%}
          {% case block.type %}
          {%- when 'review' -%}
          <div class="row v-center" {% if forloop.index > 1  %}style="display: none;"{% endif %}>
            <div class="column-30">
              <div class="v-center">
                {% if block.settings.review_image != blank %}
                <img srcset="{% if block.settings.review_image.width >= 170 %}{{ block.settings.review_image | img_url: '170x' }} 170w,{% endif %}"
                     class="full-image" 
                     data-src="" 
                     alt="{{ block.settings.review_image.alt }}" 
                     src="{{ block.settings.review_image | img_url: '800x' }}"
                     loading="lazy">
                {% else %}
                {{ 'collection-6' | placeholder_svg_tag }}
                {% endif %}
              </div>
            </div>
            <div class="column-60">
              <p class="para">{{ block.settings.review_text }}</p>
            </div>
          </div>
          {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </section>
</div>
{% schema %}
{
    "name": "Customer Reviews",
    "settings": [
    {
      "id": "typed_text",
      "type": "text",
      "label": "Text",
      "info": "Enter the words for typing effect separated with comma(,) eg. text1,text2"
    }
    ],
    "blocks": [
        {
            "type": "review",
            "name": "Review",
            "settings": [
                {
                    "id": "review_image",
                    "type": "image_picker",
                    "label": "Add image"
                },
                {
                    "id": "review_text",
                    "type": "html",
                    "label": "Text",
                    "default": "<i>‚ÄúThe comment by the reviewer goes here </i>üê∂‚Äù<br><i>- name goes here, category</i>",
                    "info": "Change the text only and don't remove the tags i.e., '<i>,<br>', if you don't know what they are."
                }
            ]
        }
        
    ],
    "presets": [
        {
            "name": "Reviews",
            "category": "ADVANCED LAYOUT"
        }
    ]
}
{% endschema %}

