<section class="image-with-text-4 color-{{ section.settings.image_with_text_4_color_scheme }}">
  <div class="container">
    <div class="flex {% if section.settings.reverse_columns %} row-reverse{% endif %} ">
      <div class="column-30">
        <div class="v-center logo-jobs">
          {% if section.settings.image != blank %}
              	<img 
                     width="auto"
           height="auto"
                     src="{{ section.settings.image | img_url: '533x' }}" alt="{{ section.settings.image.alt }}" class="" loading="lazy">
              {% else %}
            	{{ 'image' | placeholder_svg_tag }} 
            {% endif %}
        </div>
      </div>

      <div class="column-40">
        <h2 class="headings">{{ section.settings.header_text }}</h2>
        <p class="para">
         {{ section.settings.para_text }}
        </p>

      </div>

    </div>
  </div>
</section>


{% schema %}
{
    "name": "t:sections.plain-image-with-text.name",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "t:sections.plain-image-with-text.settings.image.label"
        },
        {
            "id": "header_text",
            "type": "text",
            "label": "t:sections.plain-image-with-text.settings.heading.label",
            "default": "Image with text"
        },
        {
            "id": "para_text",
            "type": "html",
            "label": "t:sections.plain-image-with-text.settings.description.label",
            "default" : "Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review."
        },
        {
            "type": "checkbox",
            "id": "reverse_columns",
            "default": false,
            "label": "t:sections.plain-image-with-text.settings.reverse_columns.label"
        },
        {
          "type": "select",
          "id": "image_with_text_4_color_scheme",
          "info" : "t:sections.image-with-text.settings.color_scheme.info",
          "options": [
             {
               "label": "t:sections.image-with-text.settings.color_scheme.options__1.label",
               "value": "accent-1"
             },
             {
               "label": "t:sections.image-with-text.settings.color_scheme.options__2.label",
               "value": "accent-2"
             },
             {
               "label": "t:sections.image-with-text.settings.color_scheme.options__3.label",
               "value": "background-1"
             },
             {
               "label": "t:sections.image-with-text.settings.color_scheme.options__4.label",
               "value": "background-2"
             },
             {
               "label": "t:sections.image-with-text.settings.color_scheme.options__5.label",
               "value": "background-3"
             },
             {
               "label": "t:sections.image-with-text.settings.color_scheme.options__6.label",
               "value": "background-4"
             },
             {
               "label": "t:sections.image-with-text.settings.color_scheme.options__7.label",
               "value": "background-5"
             },
             {
               "label": "t:sections.image-with-text.settings.color_scheme.options__8.label",
               "value": "inverse"
             }
          ],
          "label": "t:sections.image-with-text.settings.color_scheme.label",
          "default": "background-5"
        }
    ],
    "blocks": [],
    "presets": [
        {
            "name": "t:sections.plain-image-with-text.presets.name",
            "category": "ADVANCED LAYOUT"
        }
    ]
}
{% endschema %}

