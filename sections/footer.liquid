{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
<footer>
  <div class="container">
    <div class="row flex">
      <div class="column-40">
        <div class="section-subheading">
          {{ section.settings.top_header_text }}
        </div>
        {% form 'customer', class: 'contact-form' %}
        <!-- <label for="Email" class="newsletter__label hidden-label">Sign up to our mailing list</label> -->
        <div class="newsletter--form">
          <div class="input-group">
            <input type="email" 
              value="" 
              placeholder="Email" 
              id="Email"  
              name="contact[email]"
              class="footer-newsletter-input" 
              autocorrect="off" 
              autocapitalize="off" 
            />
            <span class="footer-newsletter-input-btn">
              <button id="Subscribe" type="submit" class="newsletter__submit"
                      aria-label="Sign Up">
                <span>Sign Up</span>
              </button>
            </span>
          </div>
          {%- if form.errors -%}
            <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
          {%- endif -%}
          {%- if form.posted_successfully? -%}
            <div class="note form-success">{% render 'icon-success' %}Thanks for subscribing</div>
          {%- endif -%}
        </div>
        {% endform %}
      </div>
      <div class="column-25">
        <div class="v-center">
          <a class="charity_logo" href="#">
            <img 
                 class=""
                 data-src=""
                 alt="Charity logo"
                 width="auto"
                 height="auto"
                 src="{{ section.settings.footer_image | img_url: '533x' }}"
                 loading="lazy" />
          </a>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="left-nav">
        <ul class="no-bullets site-footer__linklist">

          {%- for block in section.blocks -%}
          {% case block.type %}
          {%- when 'social_links' -%}
          <li>
            <a href="{{ block.settings.link_url }}">
              {{ block.settings.link_text }}
            </a>
          </li>
          {%- endcase -%}
          {%- endfor -%}
          <!--           <li><a href="#">Instagram</a></li>

<li><a href="#">Email Us</a></li>

<li><a href="#">FAQ</a></li>

<li>
<a href="#" class="no-bullets site-footer__linklist">JOBS<sup><span class="dot"><span>1</span></span></sup>
</a>
</li> -->
        </ul>
      </div>

      <div class="right-nav">
        <ul class="no-bullets site-footer__linklist">
          <li><a href="/policies/privacy-policy">Cookies</a></li>

          <li><a href="/policies/privacy-policy">Privacy</a></li>

          <li>
            <a href="/policies/terms-of-service">Terms &amp; Conditions</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="footer-bar">
    <hr class="full-length-ruler">
    <p class="copyright text-center all-caps">
      {{ section.settings.bottom_header_text }}
      <span class="footer-payment-strip list-payment__item">
        {%- for type in shop.enabled_payment_types -%}
        <span>

          {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
        </span>
        {%- endfor -%}
      </span>
    </p>

  </div>
</footer>
{% include "currency-script" %}


