{{ 'about-hero.css' | asset_url | stylesheet_tag }}

<style>

  @media (max-width: 768px){
    .hero-image-about {
    background-image: none;
    }
}
</style>

<div class="hero-image-about color-{{ section.settings.about_hero_color_scheme }}">
  {% if section.settings.about_bg_img != blank %}
      <img srcset="{%- if section.settings.about_bg_img.width >= 165 -%}{{ section.settings.about_bg_img | img_url: '165x' }} 165w,{%- endif -%}
                    {%- if section.settings.about_bg_img.width >= 360 -%}{{ section.settings.about_bg_img | img_url: '360x' }} 360w,{%- endif -%}
                    {%- if section.settings.about_bg_img.width >= 535 -%}{{ section.settings.about_bg_img | img_url: '535x' }} 535w,{%- endif -%}
                    {%- if section.settings.about_bg_img.width >= 720 -%}{{ section.settings.about_bg_img | img_url: '720x' }} 720w,{%- endif -%}"
            src="{{ section.settings.about_bg_img | img_url: '533x' }}" 
            alt="{{ section.settings.about_bg_img.alt }}" 
            class="full-image about-no-mobile" 
            loading="lazy">
        {% else %}
        <div class="placeholder about-no-mobile"> {{'image' | placeholder_svg_tag: 'placeholder-svg' }}</div>
  {% endif %}

  {% if section.settings.about_bg_img_mobile != blank %}
      <img srcset="{%- if section.settings.about_bg_img_mobile.width >= 165 -%}{{ section.settings.about_bg_img_mobile | img_url: '165x' }} 165w,{%- endif -%}
                    {%- if section.settings.about_bg_img_mobile.width >= 360 -%}{{ section.settings.about_bg_img_mobile | img_url: '360x' }} 360w,{%- endif -%}
                    {%- if section.settings.about_bg_img_mobile.width >= 535 -%}{{ section.settings.about_bg_img_mobile | img_url: '535x' }} 535w,{%- endif -%}
                    {%- if section.settings.about_bg_img_mobile.width >= 720 -%}{{ section.settings.about_bg_img_mobile | img_url: '720x' }} 720w,{%- endif -%}"
            src="{{ section.settings.about_bg_img_mobile | img_url: '533x' }}" 
            alt="{{ section.settings.about_bg_img_mobile.alt }}" 
            class="full-image about-no-desktop" 
            loading="lazy">
        {% else %}
        <div class="placeholder about-no-desktop"> {{'image' | placeholder_svg_tag: 'placeholder-svg' }}</div>
  {% endif %}
   
  <div class="hero-text">
    <h1 class="h1 heading1">
      {%- if section.settings.about_head_text != blank -%}
        {{ section.settings.about_head_text }}
      {%- else -%}
        {{ page.title | escape }}
      {%- endif -%}
    </h1>
  </div>
</div>

{% schema %}
{
    "name": "t:sections.hero-banner.name",
    "settings": [
        {
            "id": "about_bg_img",
            "type": "image_picker",
            "label": "t:sections.hero-banner.settings.desktop_image.label"
        },
		    {
            "id": "about_bg_img_mobile",
            "type": "image_picker",
            "label": "t:sections.hero-banner.settings.mobile_image.label"
        },
        {
            "id": "about_head_text",
            "type": "text",
            "label": "t:sections.hero-banner.settings.heading.label",
            "default": "Banner heading"
        },
        {
          "type": "select",
          "id": "about_hero_color_scheme",
          "info" : "t:sections.hero-banner.settings.color_scheme.info",
          "options": [
             {
               "label": "t:sections.hero-banner.settings.color_scheme.options__1.label",
               "value": "accent-1"
             },
             {
               "label": "t:sections.hero-banner.settings.color_scheme.options__2.label",
               "value": "accent-2"
             },
             {
               "label": "t:sections.hero-banner.settings.color_scheme.options__3.label",
               "value": "background-1"
             },
             {
               "label": "t:sections.hero-banner.settings.color_scheme.options__4.label",
               "value": "background-2"
             },
             {
               "label": "t:sections.hero-banner.settings.color_scheme.options__5.label",
               "value": "background-3"
             },
             {
               "label": "t:sections.hero-banner.settings.color_scheme.options__6.label",
               "value": "background-4"
             },
             {
               "label": "t:sections.hero-banner.settings.color_scheme.options__7.label",
               "value": "background-5"
             },
             {
               "label": "t:sections.hero-banner.settings.color_scheme.options__8.label",
               "value": "inverse"
             }
          ],
          "label": "t:sections.hero-banner.settings.color_scheme.label",
          "default": "background-1"
        }
    ],
    "presets": [
        {
            "name": "t:sections.hero-banner.presets.name",
            "category": "ADVANCED LAYOUT"
        }
    ]
}
{% endschema %}



