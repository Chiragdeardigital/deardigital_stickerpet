<section class="partner content-section">
  <div class="container">
    <div class="flex-center">
      <p>{{ section.settings.text }}</p>
      {%- if section.settings.partner_image != blank -%}
      <img srcset="{%- if section.settings.partner_image.width >= 100 -%}{{ section.settings.partner_image | img_url: '100x' }} 100w,{%- endif -%}"
           src="{{ section.settings.partner_image | img_url: '120x' }}" 
           alt="{{ section.settings.image.alt }}" 
           loading="lazy">
        {% else %}
        <span style="width: 100px;">{{'product-2' | placeholder_svg_tag }}</span>
        {%- endif -%}
      <a href="{{ section.settings.btn_url }}">{{ section.settings.btn_text }}</a>
    </div>
  </div>
</section>

{% schema %}
{
    "name": "t:sections.partner.name",
    "settings": [
        {
            "id": "partner_image",
            "type": "image_picker",
            "label": "t:sections.partner.settings.partner_image.label"
        },
        {
            "id": "text",
            "type": "text",
            "label": "t:sections.partner.settings.text.label"
        },
        {
            "id": "btn_text",
            "type": "text",
            "label": "t:sections.partner.settings.btn_text.label"
        },
        {
            "id": "btn_url",
            "type": "url",
            "label": "t:sections.partner.settings.btn_url.label"
        }
    ],
    "presets": [
        {
            "name": "t:sections.partner.presets.name",
            "category": "ADVANCED LAYOUT"
        }
    ]
}
{% endschema %}

