<section class="faq-section">
  <div class="container">
    <div class="faq-wrapper">
      {% if section.settings.title_text != blank %}
      <h2 class="headings">{{  section.settings.title_text }}</h2>
      {% endif %}
      <div id="faq">
        {%- for block in section.blocks -%}
        {% case block.type %}
        {%- when 'faq_list' -%}
        <h5 class="accordion"><strong>{{ block.settings.header_text }}</strong></h5>
        <div class="panel">
          <p>
            {{ block.settings.para_text }}
          </p>
        </div>
        {%- endcase -%}
        {%- endfor -%}

      </div>
    </div>
  </div>
</section>

{% schema %}
{
    "name": "t:sections.faq.name",
    "settings": [
        {
            "id": "title_text",
            "type": "html",
            "label": "t:sections.faq.settings.heading.label"
        }
    ],
    "blocks": [
        {
            "type": "faq_list",
            "name": "t:sections.faq.blocks.faq_list.name",
            "settings": [
                {
                    "id": "header_text",
                    "type": "html",
                    "label": "t:sections.faq.blocks.faq_list.settings.heading.label"
                },
                {
                    "id": "para_text",
                    "type": "html",
                    "label": "t:sections.faq.blocks.faq_list.settings.description.label"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "t:sections.faq.presets.name",
            "category": "ADVANCED LAYOUT"
        }
    ]
}
{% endschema %}

