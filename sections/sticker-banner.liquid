{{ 'sticker-banner.css' | asset_url | stylesheet_tag }}

<div class="hero-image-about hero-image-classic color-{{ section.settings.sticker_banner_color_scheme }}" style="background-image: none;overflow: hidden;">
    <div class="hero-text">
        <h1 class="h1 heading1">{{ section.settings.sticker_banner_heading }}</h1>
    </div>

    {% if section.settings.banner_overlay_image_1 != blank %}
    <img 
    src="{{ section.settings.banner_overlay_image_1 | img_url: 'master' }}" class="classic-banner-image_1"  alt="{{ section.settings.banner_overlay_image_1.alt }}" loading="lazy">
    {% else %}
    {{ 'lifestyle-2' | placeholder_svg_tag }}
    {% endif %}

    {% if section.settings.banner_overlay_image_2 != blank %}
    <img 
    src="{{ section.settings.banner_overlay_image_2 | img_url: 'master' }}" class="classic-banner-image_2" alt="{{ section.settings.banner_overlay_image_2.alt }}" >
    {% else %}
    {{ 'lifestyle-2' | placeholder_svg_tag }}
    {% endif %}

    {% if section.settings.banner_overlay_image_3 != blank %}
    <img 
    src="{{ section.settings.banner_overlay_image_3 | img_url: 'master' }}" class="classic-banner-image_3" alt="{{ section.settings.banner_overlay_image_3.alt }}" loading="lazy">
    {% else %}
    {{ 'lifestyle-2' | placeholder_svg_tag }}
    {% endif %}

    {% if section.settings.banner_overlay_image_4 != blank %}
    <img 
    src="{{ section.settings.banner_overlay_image_4 | img_url: 'master' }}" class="classic-banner-image_4" alt="{{ section.settings.banner_overlay_image_4.alt }}" >
    {% else %}
    {{ 'lifestyle-2' | placeholder_svg_tag }}
    {% endif %}
  
</div>

