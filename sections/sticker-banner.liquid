        },
        {
            "type": "image_picker",
            "id": "banner_overlay_image_1",
            "label": "Image 1"
        },
        {
            "type": "image_picker",
            "id": "banner_overlay_image_2",
            "label": "Image 2"
        },
        {
            "type": "image_picker",
            "id": "banner_overlay_image_3",
            "label": "Image 3"
        },
