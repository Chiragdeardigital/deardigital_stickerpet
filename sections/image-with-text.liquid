<section class="image-with-text _2 color-{{ section.settings.image_with_text_2_color_scheme }}">
  <div class="row  {% if section.settings.layout == 'image_first' %} row-reverse{% endif %}">
    <div class="column-50 self-center">
      <div class="text-block">

        {%- for block in section.blocks -%}
        {% case block.type %}
        {%- when 'heading' -%}
        <h2 class="headings">{{ block.settings.heading | escape }}</h2>
        {%- when 'image_2_desc' -%}
        <p class="para">{{ block.settings.para_text }}</p>
        {%- when 'button' -%}
        {% if block.settings.button_label != blank %}
        <a {% if block.settings.button_link != blank %} href="{{ block.settings.button_link }}"{% endif %} class="button">
          {{ block.settings.button_label | escape }}
        </a>
        {% endif %}
        {%- endcase -%}
        {%- endfor -%}

      </div>
    </div>
    <div class="m-product-imgs no-d">
      <div class="v-center">
        <div class="row">
          <div class="column-50 ">
            {% if section.settings.mobile_image_1 != blank %}
            <img srcset="{%- if section.settings.mobile_image_1.width >= 165 -%}{{ section.settings.mobile_image_1 | img_url: '165x' }} 165w,{%- endif -%}
                         {%- if section.settings.mobile_image_1.width >= 360 -%}{{ section.settings.mobile_image_1 | img_url: '360x' }} 360w,{%- endif -%}
                         {%- if section.settings.mobile_image_1.width >= 535 -%}{{ section.settings.mobile_image_1 | img_url: '535x' }} 535w,{%- endif -%}
                         {%- if section.settings.mobile_image_1.width >= 720 -%}{{ section.settings.mobile_image_1 | img_url: '720x' }} 720w,{%- endif -%}
                         {%- if section.settings.mobile_image_1.width >= 940 -%}{{ section.settings.mobile_image_1 | img_url: '940x' }} 940w,{%- endif -%}
                         {%- if section.settings.mobile_image_1.width >= 1070 -%}{{ section.settings.mobile_image_1 | img_url: '1070x' }} 1070w{%- endif -%}"
                 src="{{ section.settings.mobile_image_1 | img_url: '533x' }}" 
                 alt="{{ section.settings.mobile_image_1.alt }}" 
                 class="full-image" 
                 width="auto"
           height="auto"
                 loading="lazy">
            {% else %}
            <div class="placeholder">{{ 'image' | placeholder_svg_tag: 'placeholder-svg'  }}</div>
            {% endif %}
          </div>
          <div class="column-50 ">
            {% if section.settings.mobile_image_2 != blank %}
            <img srcset="{%- if section.settings.mobile_image_2.width >= 165 -%}{{ section.settings.mobile_image_2 | img_url: '165x' }} 165w,{%- endif -%}
                         {%- if section.settings.mobile_image_2.width >= 360 -%}{{ section.settings.mobile_image_2 | img_url: '360x' }} 360w,{%- endif -%}
                         {%- if section.settings.mobile_image_2.width >= 535 -%}{{ section.settings.mobile_image_2 | img_url: '535x' }} 535w,{%- endif -%}
                         {%- if section.settings.mobile_image_2.width >= 720 -%}{{ section.settings.mobile_image_2 | img_url: '720x' }} 720w,{%- endif -%}
                         {%- if section.settings.mobile_image_2.width >= 940 -%}{{ section.settings.mobile_image_2 | img_url: '940x' }} 940w,{%- endif -%}
                         {%- if section.settings.mobile_image_2.width >= 1070 -%}{{ section.settings.mobile_image_2 | img_url: '1070x' }} 1070w{%- endif -%}"
                 src="{{ section.settings.mobile_image_2 | img_url: '533x' }}" 
                 alt="{{ section.settings.mobile_image_2.alt }}" 
                 width="auto"
           height="auto"
                 class="full-image" 
                 loading="lazy">
            {% else %}
            <div class="placeholder">{{ 'image' | placeholder_svg_tag: 'placeholder-svg'  }}</div>
            {% endif %}
          </div>

        </div>
      </div>
    </div>
    <div class="column-50 no-m">
      <div class="v-center">
        {% if section.settings.desktop_image != blank %}
        <img srcset="{%- if section.settings.desktop_image.width >= 165 -%}{{ section.settings.desktop_image | img_url: '165x' }} 165w,{%- endif -%}
                     {%- if section.settings.desktop_image.width >= 360 -%}{{ section.settings.desktop_image | img_url: '360x' }} 360w,{%- endif -%}
                     {%- if section.settings.desktop_image.width >= 535 -%}{{ section.settings.desktop_image | img_url: '535x' }} 535w,{%- endif -%}
                     {%- if section.settings.desktop_image.width >= 720 -%}{{ section.settings.desktop_image | img_url: '720x' }} 720w,{%- endif -%}
                     {%- if section.settings.desktop_image.width >= 940 -%}{{ section.settings.desktop_image | img_url: '940x' }} 940w,{%- endif -%}
                     {%- if section.settings.desktop_image.width >= 1070 -%}{{ section.settings.desktop_image | img_url: '1070x' }} 1070w{%- endif -%}"
             src="{{ section.settings.desktop_image | img_url: '533x' }}" 
             alt="{{ section.settings.desktop_image.alt }}" 
             width="auto"
           height="auto"
             class="full-image" 
             loading="lazy">
        {% else %}
      <div class="placeholder">{{ 'image' | placeholder_svg_tag }}</div>
        {% endif %}
      </div>
    </div>
  </div>
</section>


