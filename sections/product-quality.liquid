
<section class="product-quality color-{{ section.settings.product_quality_color_scheme }}">
  <div class="container">
    <div class="flex">
      {%- for block in section.blocks -%}
      {%- case block.type -%}
      {%- when 'quality_block' -%}
      <div class="quality-block {% if block.settings.hide_block %}no-m{% endif %}">
        <h2 class="headings">{{ block.settings.heading }}</h2>
      </div>
      {%- endcase -%}
      {%- endfor -%}
      {%- comment -%}
      {%- if section.settings.show_rating_block -%}
      <div class="quality-block no-m">
        <h2 class="headings">4.9&nbsp;&nbsp;<span class="star">{% include "icon-star" %}</span><br>rating</h2>
      </div>
      {%- endif -%}
    {%- endcomment -%}
    </div>
  </div>
</section>



{% schema %}
{
    "name": "Product quality bar",
    "settings": [
      {
        "type": "select",
        "id": "product_quality_color_scheme",
        "info" : "Choose a background",
        "options": [
          {
            "label": "Accent 1",
            "value": "accent-1"
          },
          {
            "label": "Accent 2",
            "value": "accent-2"
          },
          {
            "label": "Background 1",
            "value": "background-1"
          },
          {
            "label": "Background 2",
            "value": "background-2"
          },
          {
            "label": "Background 3",
            "value": "background-3"
          },
          {
            "label": "Background 4",
            "value": "background-4"
          },
          {
            "label": "Background 5",
            "value": "background-5"
          },
          {
            "label": "Inverse",
            "value": "inverse"
          }
        ],
        "label": "Color Scheme",
        "default": "background-3"
      }
    ],
    "blocks": [
        {
            "type": "quality_block",
            "name": "Block",
            "limit": 3,
            "settings": [
                {
                    "type": "html",
                    "id": "heading",
                    "label": "Text"
                },
         		{
                    "type": "checkbox",
                    "id": "hide_block",
                    "default": false,
                    "label": "Hide block in mobile screen"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Product quality bar",
            "category": "ADVANCED LAYOUT"
        }
    ]
}
{% endschema %}

