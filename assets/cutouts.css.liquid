
.hero-image-reviews {
  height: 25vw;
  position: relative;
  min-height: 300px;
}

.text-center {
  text-align: center!important;
}

.align-center {
  align-items: center;
}
.justify-center {
  justify-content: center;
}
.flex-box {
  display: flex;
}
.flex-column {
  flex-direction: column;
}

.hero-stars {
  font-size: 32px;
}

.hero-image-reviews p{
  margin: 0 0 15px 0;
  text-rendering: optimizeLegibility;
}

.heading1 {
  font-size: 39.1px;
}

.marg-bot-xl {
  margin-bottom: 100px;
}
.marg-top-xl {
  margin-top: 100px;
}

.flex-wrap {
  flex-wrap: wrap;
}

.cutout-container {
/*   max-width: 1200px; */
  margin: 0 auto;
}
.justify-around {
  justify-content: space-around;
}

.img-div {
    width: calc( 33.333% - 20px );
    text-align: center;
}

.marg-bot {
  margin-bottom: 50px;
}
.marg-top {
  margin-top: 50px;
}

.img-div img {
  width: 350px;
  height: 350px;
  border-radius: 24px;
  transition: 1s ease-out 1s;
}

.img-container img {
  width: 100%;
  border-radius: 24px;
  object-fit: fill;
  transition: 1s ease-out 1s;
}

iframe, img {
  max-width: 100%;
}
img {
  border: 0 none;
}

.no-disp {
  display: none!important;
}

@media (min-width: 576px){
/*   .container, .wrapper {
    max-width: 540px;
  } */
}

@media (min-width: 768px){
/*   .container, .wrapper {
    max-width: 720px;
  } */
  .no-desktop {
    display: none!important;
  }
}

@media (min-width: 992px){
/*   .container, .wrapper {
    max-width: 960px;
  } */
}


@media (max-width: 767px){
  .hero-image-reviews .heading1 {
    font-size: 35px;
  }
  .hero-image-reviews {
    height: 85vw;
  }
  .hero-image-reviews .heading1, .hero-image-reviews .hero-stars {
    font-size: 30px;
  }
  .hero-stars {
    font-size: 24px;
  }
  .no-mobile {
    display: none!important;
  }

}

@media (max-width: 1199px) and (min-width: 768px){
