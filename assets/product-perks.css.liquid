.perk img {
  width: auto;
  height: 100px;
}

.perk p {
  padding-top: 10px;
  letter-spacing: 1px;
  font-size: 17px;
  margin-bottom: 12px;
}

.feature-of {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

@media (max-width:992px) {
    .perk {
        flex: 0 0 50%;
        max-width: 50%;
    }
}

@media (max-width:768px) {
    .perk:first-child, .perk:last-child{
        display: none;
    }
}