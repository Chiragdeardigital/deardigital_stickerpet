/* ============================== 
PRODUCTS STYLING
================================*/

.product-hero {
  background-color: var(--background-color-1);
}

.product-hero .container {
  padding-bottom: 85px;
}

.product-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.slider.left {
  max-width: calc(58.333% - 25px);
  padding-left: 30px;
  position: sticky;
  top: 10px;
  width:100%;
}

.product-single-wrapper.right {
  max-width: calc(41.666% - 25px);
  /*   padding: 0 0 0 25px; */
  text-align: left;
  width:100%;
}

.product-single {
  padding-top: 36px;
}

.product-single-title {
  font-size: 2.11765em;
  margin: 0 auto;
  /* text-align: center; */
  max-width: 380px;
}

.center-it {
  margin: 0 auto;
  max-width: 380px;
}

.product-price {
  font-size: 20.4px;
  font-family: Ubuntu, sans-serif;
  font-weight: 700;
  margin-right: 10px;
}

.product-single-description {
  font-size: 19px;
  margin: 34px 0 12.25px 0;
}

.product-single-description p:nth-child(1) {
  margin-bottom: 21px;
}

.product-single-form {
  margin-top: 30px;
}

.box {
  font-size: 1rem;
  background-color: transparent;
  position: relative;
  padding: 51px 17px;
  border: 10px solid #f1f1f2;
  border-radius: 50px;
  max-width: 100%;
  margin: 0 auto;
}

.box__file {
  width: .1px;
  height: .1px;
  opacity: 0;
  overflow: hidden;
  position: absolute;
  z-index: -1;
}

.box__file+label {
  max-width: 80%;
  text-overflow: ellipsis;
  white-space: nowrap;
  cursor: pointer;
  display: block;
  overflow: hidden;
  color: #f1f1f2;
  font-family: Ubuntu, sans-serif;
  letter-spacing: 1px;
  font-size: 25px;
  margin: 0 auto 5px;
  text-align: center;
}

.box__dragndrop {
  display: inline;
  font-size: 18px;
}

.box__icon {
  width: 100%;
  height: 102px;
  fill: #a5dcde;
  display: block;
  cursor: pointer;
}

.box__icon img {
  object-fit: contain;
}

.product-single__add-to-cart .button {
  margin: 15px 0;
  width: auto;
}

.shopify-payment-button .shopify-payment-button__button--unbranded{
  font-family: var(--font-family-headers);
  border-radius: 50px;
  width: 100%;
  border: 6px solid #fff;
  padding: 15px;
}

@media (max-width: 767px){
  .shopify-payment-button .shopify-payment-button__button--unbranded{
    border: 4px solid #fff;
  }
}

/* ======================== SLIDER STYLING ============================= */

.slider-single img {
  max-width: 471px;
  margin: 0 auto;
  cursor: grab;
  display: block;
  max-width: 555px;
  height: 555px;
  max-height: 100%;
  object-fit: contain;
}

.slider-nav {
  max-width: 471px;
  margin: 0 auto;
}

.slider-nav img {
  max-height: 114px;
  object-fit: contain;
  margin: 0 auto;
  cursor: pointer;
}

.slider-nav .is-active img {
  border: 2px solid #ffffff;
}

.slick-arrow {
  position: absolute;
  bottom: 50%;
  visibility: hidden;
  cursor: pointer;
}

.slick-arrow::before {
  content: '';
  position: absolute;
  background-image: url("{{ 'arrow.svg' | asset_url }}");
  background-size: contain;
  visibility: visible;
  background-repeat: no-repeat;
  width: 36px;
  height: 36px;
}

.slick-next::before {
  /*   right: -31rem; */
  transform: rotate(-90deg);
}

.slick-prev::before {
  /*   left: -56px; */
  transform: rotate(90deg);
}

.slick-next {
  right: -3rem;
  /*   transform: rotate(-90deg); */
}

.slick-prev {
  left: -3rem;
  /*   transform: rotate(90deg); */
}

.custom-product-3 .slider-single .slick-next {
  right: 2rem;
}
.custom-product-3 .slider-single .slick-prev {
  left: 2rem;
}

.js .slider-single>div:nth-child(1n+2) {
  display: none
}

.js .slider-single.slick-initialized>div:nth-child(1n+2) {
  display: block
}

