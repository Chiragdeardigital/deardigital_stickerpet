@media (max-width: 992px) {
  .box {
    padding: 11% 0;
  }

  .product-single-description {
    font-size: 17px;
  }
}

@media (max-width: 768px) {
  .product-wrapper {
    justify-content: center;
  }

  .slider.left {
    max-width: 65%;
    padding-left: 0;
  }

  .slick-initialized .slick-slide {
    height: 35vh;
    padding-top: 20px;
  }

  .slider-single img {
    object-fit: contain;
  }

  .mobile-cart-submit {
    display: block;
    position: fixed;
    width: 100%;
    bottom: 0;
    left: 0;
    text-transform: unset;
    border-radius: 0;
    color: var(--text-color);
    z-index: 2;
  }

  .sticky-prices p {
    margin: 0;
    line-height: 7vh;
    padding: 0 10px;
    letter-spacing: inherit;
    font-size: 16px;
  }

  .mobile-product-text {
    width: 68%;
    font-size: 18px;
    margin: 30px auto 10px;
    font-family: Lato, sans-serif;
    text-align: center;
  }

  .mobile-product-reviews {
    display: block;
    font-size: 14px;
    font-weight: 100;
    font-family: Lato, sans-serif;
    letter-spacing: .5px;
  }

  .product-wrapper .star {
    margin: 0;
  }

  .product-wrapper .star .star-icon {
    width: 20px;
    height: 20px;
  }

  .review-stars {
    margin-top: 15px;
    display: block;
  }

  .product-price {
    font-size: 20px;
    letter-spacing: .5px;
    margin: 0;
    line-height: 1;
    padding-top: 0;
    padding-bottom: 5%;
    text-align: center;
  }

  .sticky-prices p span {
    display: inline-block;
  }
}