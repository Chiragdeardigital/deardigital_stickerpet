.hero-image-reviews {
  height: 25vw;
  position: relative;
  min-height: 300px;
  background-color: #a5dcde;
  margin-bottom: 100px;
}

.review-text-wrapper {
  text-align: center;
  padding-top: 3%;
}

.review-heading {
  color: #fff;
  font-size: 44px;
}

.review-sub-heading {
  max-width: 685px;
  margin: 0 auto;
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hero-sub-text {
  color: #062322;
  font-size: 32px;
  margin: 0 0 15px 0;
  text-rendering: optimizeLegibility;
}

.hero-stars {
  margin: 0 0 15px 0;
}

.hero-stars .star {
  margin-right: 12px;
}

.hero-stars .star .star-icon {
  width: 24px;
  height: 24px;
}

@media (max-width: 992px){
  .review-heading {
    font-size: 35px;
  }

  .review-sub-heading {
    max-width: 521px;
  }
}

@media (max-width: 768px){
  .hero-image-reviews {
    height: 85vw;
  }
  
  .review-text-wrapper {
  padding-top: 10%;
}
   .review-heading {
    font-size: 30px;
    margin: 0 auto .8em auto;
}
  .review-sub-heading {
  flex-direction: column;
  }
}