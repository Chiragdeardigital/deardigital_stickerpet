.block-cursor * {
  pointer-events: none;
  opacity: 0.8;
  transition: opacity 300ms ease;
}

.block-cursor {
  cursor: not-allowed;
}

.cart-body {
  display: block;
  margin: 0 auto;
  padding: 0;
  height: calc(100vh - 520px);
  overflow-y: auto;
  flex: 1 1 0%;
}

.ajaxcart__product {
  position: relative;
  max-height: 500px;
}

.ajaxcart__product.is-removed {
  max-height: 0;
  overflow: hidden;
  visibility: hidden;
  backface-visibility: hidden;
  transition: all 450ms cubic-bezier(0.57, .06, .05, .95);
}

.ajaxcart__row {
  padding-bottom: 17px;
  margin-bottom: 17px;
  border-bottom: 1px solid currentColor;
}
#CartDrawer .grid{
  margin: 0;
  align-items: center;
}

.grid {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin: 0;
}

.grid__item.one-quarter {
  width: calc(25% - 15px);
  padding: 0;
}

.ajaxcart__product-image {
  padding-top: 3px;
  display: block;
  overflow: hidden;
}

.ajaxcart__product-image img {
  display: block;
  margin: 0 auto;
  max-width: 100%;
  cursor: pointer;
}

.ajaxcart__product-name--wrapper {
  margin-bottom: 8px;
}

.ajaxcart__product-name {
  font-size: 15px;
  line-height: 1.3;
  display: block;
  color: currentColor;
  cursor: pointer;
}

.grid__item.three-quarters {
  width: calc(75% - 15px);
  padding:0;
}

.grid__item.one-half {
  width: calc(50% - 10px);
  padding:0;
  /*   text-align: end; */
}

.ajaxcart__qty, .js-qty {
  position: relative;
  max-width: 75px;
  min-width: 75px;
  overflow: visible;
}

.ajaxcart__qty-adjust {
  padding: 0 5px;
  line-height: 1;
  color: currentColor;
  z-index: 1;
  cursor: pointer;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  top: 0;
  bottom: 0;
  border: 0 none;
  background: 0 0;
  text-align: center;
  overflow: hidden;
  user-select: none;
  transition: all .2s ease-out;
}

.ajaxcart__qty--minus {
  left: 0;
  border-right: 1px solid currentColor;
}

.ajaxcart__qty--plus {
  right: 0;
  border-left: 1px solid currentColor;
}

.ajaxcart__qty-adjust .icon {
  display: inline-block;
  font-size: 8px;
  vertical-align: middle;
}

.drawer .ajaxcart__qty-num[type=text] {
  font-family: var(--font-body-family);
  font-style: var(--font-body-style);
  font-weight: var(--font-body-weight);
  letter-spacing: .1em;
  text-transform: uppercase;
  display: block;
  background: 0 0;
  text-align: center;
  width: 100%;
  padding: 2px 20px;
  border: 1px solid currentColor;
}

.ajaxcart__qty-adjust:hover {
  background-color: rgb(var(--color-foreground));
  color: rgb(var(--color-background));
}

.ajaxcart__price, .cart__price, .cart__subtotal {
  font-family: var(--font-body-family);
  font-style: var(--font-body-style);
  font-weight: var(--font-body-weight);
  letter-spacing: .1em;
  text-transform: uppercase;
  font-size: .88235em;
  display: block;
}

.cart-foot {
  display: block;
  position: sticky;
  top: 100%;
  padding-top: 8px;
  margin-top: 8px;
  flex: 0 0 auto;
  border-top: 1px solid currentColor;
}

#add-gift {
  cursor: pointer;
}

#CartDrawer .one-third, #CartDrawer .two-thirds{
  padding: 0;
  width: auto;
}
#CartDrawer .grid__item.one-half{
  width: auto;
}

.one-third {
  width: calc(33.333% - 20px);
}

.two-thirds {
  width: calc(66.666% - 20px);
  text-align: right;
}

.ajaxcart__subtotal {
  font-family: var(--font-body-family);
  font-style: var(--font-body-style);
  font-weight: 700;
  letter-spacing: .5px;
  text-transform: capitalize;
  font-size: 12px;
  margin-bottom: 5px;
}

.text-right .ajaxcart__ship, .text-right .ajaxcart__subtotal {
  font-weight: 400;
}

.text-right {
  text-align: right;
}

.ajaxcart__ship {
  font-size: 12px;
  font-family: var(--font-body-family);
  font-style: var(--font-body-style);
  font-weight: 700;
  letter-spacing: .5px;
  text-transform: none;
  margin-bottom: 5px;
}

.ajaxcart__product-meta, .ajaxcart__product-name {
  display: block;
}

.ajaxcart__product-name+.ajaxcart__product-meta {
  padding-top: 3px;
}

.display-non {
  display: none!important;
}

.cart__checkout {
  width: 100%;
  border-radius: 5px;
  margin-bottom: 10px;
}

.continue-shopping {
  /* background-color: #fff;
  color: #f9ae37;
  border: 2px solid #f9ae37; */
  width: 100%;
  border-radius: 5px;
}

.ajaxcart__note {
  font-weight: 400;
}

.ajaxcart__inner--has-fixed-footer::-webkit-scrollbar, .cart-body::-webkit-scrollbar, .drawer__inner::-webkit-scrollbar {
  display: none;
}

